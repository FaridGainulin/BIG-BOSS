.invest-section
  // background-image: url('../images/invest-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    text-align: center
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 50px 0 50px 0
    +above($breakpoints.xxl)
      padding 60px 0 70px 0

  &__sub-title
    padding 10px 0 20px 0
    +above($breakpoints.sm)
      padding 10px 0 30px 0
    +above($breakpoints.md)
      padding 10px 0 30px 0
    +above($breakpoints.xxl)
      padding 10px 0 37px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 30px

  &__card
    padding 20px 10px 20px 10px
    width 280px !important
    height: 100px
    border-radius: 20px
    background-color #fff
    border: 1px solid #f0edf2
    box-shadow: 0 4px 10px 0 rgba(247, 247, 247, 0.7)
    cursor pointer
    transition border-color 0.2s, border 0.2s
    outline: none
    user-select: none
    touch-action: manipulation;
    pointer-events: auto;
    -webkit-focus-ring-color: transparent
    -webkit-tap-highlight-color: transparent
    &:hover
      user-select: none
      outline: none
      border: 3px solid #6d58b7;
    &:focus
      user-select: none
      outline: none
      border: 3px solid #6d58b7;
    &:active
      user-select: none
      outline: none
      border: 3px solid #6d58b7;
    +above($breakpoints.sm)
      padding 28px 10px 29px 10px
      width 235px !important
      height: 125px
    +above($breakpoints.md)
      padding 48px 10px 39px 10px
      width 308px !important
      height: 170px
    +above($breakpoints.xxl)
      padding 58px 10px 49px 10px
      width 370px !important
      height: 198px

  &__card::selection
    background: transparent

  &__card
    &:hover
      p
        touch-action: manipulation;
        pointer-events: auto;
        outline: none
        color: #6D58B7
    &:focus
      p
        touch-action: manipulation;
        pointer-events: auto;
        outline: none
        color: #6D58B7
    &:active
      p
        touch-action: manipulation;
        pointer-events: auto;
        outline: none
        color: #6D58B7

  &__card-text
    color: #726d83
    padding-top 10px
    +above($breakpoints.xxl)
      line-height 140%

  &__bottom
    background-color #6D58B7
    border-radius: 20px
    padding 20px 15px 20px 15px
    margin-top 20px
    +above($breakpoints.sm)
      padding 23px 20px 36px 20px
    +above($breakpoints.md)
      margin-top 30px
      padding 33px 20px 46px 20px
    +above($breakpoints.xxl)
      padding 43px 20px 56px 20px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      justify-content center

.invest-item-1
  width 260px !important
  +above($breakpoints.md)
    width 245px !important
.invest-item
  width 260px
  +above($breakpoints.md)
    width 188px !important
