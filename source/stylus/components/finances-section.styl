.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 40px 0 0 0
    +above($breakpoints.md)
      padding 50px 0 0 0
    +above($breakpoints.xxl)
      padding 60px 0 0 0

  &__sub-title
    padding 10px 0 20px 0
    +above($breakpoints.sm)
      padding 10px 0 30px 0
    +above($breakpoints.md)
      padding 10px 0 35px 0
    +above($breakpoints.xxl)
      padding 10px 0 40px 0

  &__cards
    color: #352E4E
    text-align: center
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      justify-content center
      flex-wrap: wrap
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 30px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    gap: 11px
    padding 20px 10px 20px 10px
    border-radius: 20px
    background-color #fff
    border: 1px solid #f0edf2
    box-shadow: 0 4px 10px 0 rgba(247, 247, 247, 0.7);
    +above($breakpoints.sm)
      width 235px !important
      padding 30px 10px 30px 10px
    +above($breakpoints.md)
      padding 30px 10px 40px 10px
      width 307px !important
    +above($breakpoints.xxl)
      width 370px !important
      padding 49px 10px 61px 10px

  &__text
    color: #868295
    padding 0 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 20px 0 30px 0
    +above($breakpoints.md)
      padding 25px 0 35px 0
    +above($breakpoints.xxl)
      padding 30px 0 41px 0

  &__bottom
    position relative
    color: #fff
    border-radius: 20px
    background-color #6D58B7
    padding 20px 15px 20px 15px
    +above($breakpoints.sm)
      padding 25px 20px 30px 20px
    +above($breakpoints.md)
      padding 30px 20px 47px 20px
    +above($breakpoints.xxl)
      padding 38px 20px 57px 20px

  &__bottom-icon
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      height: auto
      width: 164px;
      right: 9px;
      bottom: 0
    +above($breakpoints.md)
      width: 193px;
      right: 12px;
    +above($breakpoints.xxl)
      width: 228px;
      right: 23px;

  &__bottom-text
    padding 10px 0 20px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center

.finances-item
  width 260px !important
  +above($breakpoints.sm)
    width 188px !important
