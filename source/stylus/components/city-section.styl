.city-section
  // background-image: url('../images/city-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #6D58B7

  &__container
    position relative
    text-align: center
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 90px 0 0 0
    +above($breakpoints.md)
      padding 150px 0 0 0
    +above($breakpoints.xxl)
      padding 252px 0 0 0

  &__sub-title
    padding 10px 0 20px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    padding-bottom 20px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      padding-bottom 40px
    +above($breakpoints.md)
      padding-bottom 60px
    +above($breakpoints.xxl)
      padding-bottom 95px

.city-item
  width 260px !important
  +above($breakpoints.sm)
    width 188px !important
